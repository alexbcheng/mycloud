<% include ../partials/header %>

<div class="container ctop">
	<h1 class="mb-2-5">Add a new Campground...</h1>
	
	<form action="/campgrounds" method="POST">
		<div class="form-group row">
			<label for="campsite" class="col-sm-2 col-form-label">Camp Site Name</label>
			<div class="col-sm-6">
			  <input type="text" class="form-control" name="name">
			</div>
		</div>
		<div class="form-group row">
			<label for="campsite" class="col-sm-2 col-form-label">$$$/night</label>
			<div class="col-sm-6">
			  <input type="number" class="form-control" name="price" min="0.01" step="0.01">
			</div>
		</div>
		<div class="form-group row">
			<label for="campsite" class="col-sm-2 col-form-label">Brief Description</label>
			<div class="col-sm-6">
			  <input type="text" class="form-control" name="desc" maxlength="150">
			</div>
		</div>
		<div class="form-group row">
			<label for="campsite" class="col-sm-2 col-form-label">Web Site</label>
			<div class="col-sm-6">
			  <input type="text" class="form-control" name="url">
			</div>
		</div>
		<div class="form-group row">
			<label for="campsite" class="col-sm-2 col-form-label">Image Link</label>
			<div class="col-sm-6">
			  <input type="text" class="form-control" name="image">
			</div>
		</div>
		<div class="form-group row">
			<div class="col-sm-2">
				<a class="btn" href="/campgrounds/"><i class="fas fa-arrow-circle-left fa-1x"></i></a>
			</div>
			<div class="col-sm-6">
			  <button type="submit" class="btn btn-primary">Add</button>
			</div>
		</div>
	</form>	
</div>

<% include ../partials/footer %>
