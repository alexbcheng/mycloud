<div class="container">
	<form action="/campgrounds/<%= camp._id %>/comments" method="POST">
		<div class="form-group">
			<label>Add comment</label> <textarea class="form-control" name="comment[text]"></textarea>
		</div>
		<div class="form-group">
			<label>By:</label> <input class="form-control" type="text" name="comment[author]">
		</div>
		<div class="form-group row">
			<div class="col-sm-10">
			  <button type="submit" class="btn btn-primary">Add</button>
			</div>
		</div>
	</form>
	<div class="container">
		<p>
			User Comments
		</p>
		<% camp.comments.forEach(function(comment) { %>
			<p> <%= comment.author %> - <%= comment.text %> </p>
		<% }) %>
	</div>
</div>
