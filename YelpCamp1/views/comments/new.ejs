<div class="row mt-4">
	<div class="col-md-4">
		<form action="/campgrounds/<%= camp._id %>/comments" method="POST">
			<div class="form-group">
				<label>Feedback</label> <textarea class="form-control" name="text"></textarea>
			</div>
			<!--
			<div class="form-group">
				<label>by:</label> <input class="form-control" type="text" name="comment[author]">
			</div>
-->
			<div class="form-group row">
				<div class="col-sm-10">
				  <button type="submit" class="btn btn-primary">Post</button>
				</div>
			</div>
		</form>
	</div>
	<div class="col-md-8 comments">
		<% camp.comments.forEach(function(comment) { %>
		<p> <strong><%= comment.author.username %> </strong> </p>
		<p> <%= comment.text %> </p>
		<hr>
		<% }) %>
	</div>
</div>
