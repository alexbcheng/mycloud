<% include ../partials/header %>


<section>
	<div class="container">
		<div class="row">
			<div class="col-md-2">
				<a class="btn" href="/campgrounds/"><i class="fas fa-arrow-circle-left fa-3x"></i></a>
			</div>
			<div class="col-md-10">
				<div class="card">
					<img class="img-fluid" src="<%= camp.image %>" alt="">
					<div class="card-body">
						<a class="lead" target="_blank" href="<%= camp.url%>"><%= camp.name%></a>
						<p>
							<em>Submitted by: <%= camp.author.username %></em>
						</p>
						<p>
							<%= camp.desc %>
						</p>
					</div>
				</div>
				<div class="row mt-4">
					<div class="col-md-4">
						<form action="/campgrounds/<%= camp._id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
							<div class="form-group">
								<label>Updating your feedback</label> <textarea class="form-control" name="text"><%= comment.text %></textarea>
							</div>
							<div class="form-group row">
								<div class="col-sm-10">
								  <button type="submit" class="btn btn-primary">Save</button>
								</div>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>

<% include ../partials/footer %>
