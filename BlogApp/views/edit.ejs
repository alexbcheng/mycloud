<% include partials/header %>

<div class="ui main text container segment">

	<form class="ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
		<div class="field">
			<input type="text" name="blog[title]" value="<%= blog.title %>">
		</div>
		<div class="field">
			<input type="text" name="blog[image]" value="<%= blog.image %>">
		</div>
		<div class="field">
			<label>Body</label> <textarea name="blog[body]"><%= blog.body %></textarea>
		</div>
		<button class="positive ui button" type="submit">Save</button>
	</form>
	<form class="ui form" action="/blogs/<%= blog._id %>?_method=DELETE" method="POST">
		<div class="ui divider"></div>
		<button class="ui red basic button" type="submit">Delete</button>
	</form>

</div>

<% include partials/footer %>
